  "description": "Continuous Testing for your Chatbots",
  "main": "index.js",
  "author": "Florian Treml",
  "license": "MIT",
  "dependencies": {
    "async": "^2.1.5",
    "body-parser": "^1.18.2",
    "botium-core": "1.1.1",
    "chalk": "^2.3.0",
    "clear": "0.0.1",
    "ejs": "^2.5.7",
    "exit-hook": "^1.1.1",
    "express": "^4.16.2",
    "figlet": "^1.2.0",
    "is-json": "^2.0.1",
    "lodash": "^4.17.4",
    "mkdirp": "^0.5.1",
    "mockery": "^2.1.0",
    "n-readlines": "^0.2.7",
    "opn": "^5.1.0",
    "readline": "^1.3.0",
    "yargs": "^10.1.1"
