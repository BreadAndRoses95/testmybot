    "node": ">=6.0"
  },
  "bin": {
    "testmybot": "./bin/testmybot.js"
  },
  "scripts": {
    "build": "rollup -c",
	"buildbin": "./node_modules/.bin/pkg --out-path dist ./package.json",
    "newpatch": "npm version patch"
